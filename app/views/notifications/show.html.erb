<div class="wrapper">
	<div class="row">
		<div class="col-md-3">
			<%= render "common/left_bar"%>
		</div>
		<div class="col-md-9">
			<div class="content">
				<div class="right-head">
					<div class="col-xs-2 text-center"><strong>培训通知</strong></div>
				</div>
				<div class="right-body">
					<div class="container-fluid font-blue text-center">
						<h2><%= @notification.try(:title) %></h2>
						<h4><%= @notification.try(:sub_title) %></h4>
					</div>
					<hr class="divider">
					<p></p>
					<div class="container-fluid text-left">
						<ul class="nav-justified">
							<li class="notice-info">发布时间: <%= @notification.try(:created_at).strftime("%Y-%m-%d") %></li>
							<li class="notice-info">浏览次数: <%= @notification.try(:view_count) %>次</li>
							<li class="notice-info">来源: <%= @notification.try(:author) %></li>
							<li class="notice-info">
								分享:
								<span class="pull-right"><%= render "common/baidu_share" %></span>
							</li>
						</ul>
						<%= @notification.try(:content) %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
