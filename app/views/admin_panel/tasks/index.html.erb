<div class="grades-main-content">
  <div class="panel panel-primary">
    <div class="panel-heading have-menu">
      <ul id="detailMenu" class="nav nav-pills nav-content-menu">
        <li class="active">
          <%= link_to("培训作业", admin_panel_tasks_path ) %>
        </li>
        <li>
          <%= link_to("日志提交", admin_panel_journals_path ) %>
        </li>
        <li><a href="#">学员反馈</a></li>
        <li><a href="#">学员评师</a></li>
        <li><a href="#">负责人反馈</a></li>
      </ul>
    </div>
      
    <div class="panel-body">
      <div class="row">
        <div id="addJournal" class="add-btn pull-right">
          <%= link_to(new_admin_panel_task_path, remote: true, format: :js) do %>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 添加作业
          <% end %>
        </div>
      </div>
     
      <hr>
      <table class="table">
        <thead>
          <tr>
            <th>作业标题</th>
            <th>作业附件</th>
            <th  width="20%">培训班</th>
            <th>已提交人数</th>
            <th>未提交人数</th>
            <th>创建&amp;修正时间</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
          <tr>
            <td align="left">
            <%= link_to(task.title, admin_panel_task_path(task),format: :js, remote: true) %>
            </td>
            <td>
              <% if task.try(:attachment).present? %>
                <%= link_to(task.try(:attachment).try(:avatar_file_name), download_admin_panel_task_path(task)) %>
              <% end %>
            </td>
            <td align="left"><%= link_to(task.try(:training_course).try(:name), admin_panel_training_course_path(task.training_course_id) )%></td>
            <td>50</td>
            <td>50</td>
            <td><%= task.updated_at.strftime("%Y-%m-%d %H:%M")%></td>
            <td>
              <%= link_to("编辑", edit_admin_panel_task_path(task),format: :js, remote: true) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<div>

<div id="taskNewOrEdit">
  
</div>
