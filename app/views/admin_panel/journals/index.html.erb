<div class="grades-main-content">
  <div class="panel panel-primary">
    <div class="panel-heading have-menu">
      <ul id="detailMenu" class="nav nav-pills nav-content-menu">
        <li>
          <%= link_to("培训作业", admin_panel_tasks_path ) %>
        </li>
        <li class="active">
          <%= link_to("日志提交", admin_panel_journals_path ) %>
        </li>
        <li><a href="#">学员反馈</a></li>
        <li><a href="#">学员评师</a></li>
        <li><a href="#">负责人反馈</a></li>
      </ul>
    </div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>姓名</th>
            <th>联系方式</th>
            <th>培训班</th>
            <th>创建&amp;修改时间</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @journals.each do |journal| %>
          <tr>
            <td><%= journal.try(:user).try(:name)%></td>
            <td><%= journal.try(:user).try(:phone)%><br><%= journal.try(:user).try(:email)%></td>
            <td><%= link_to(journal.try(:training_course).try(:name), admin_panel_notification_training_course_path(journal.training_course.notification, journal.training_course))%></td>
            <td><%= journal.try(:add_date).strftime("%Y-%m-%d %H:%M")%></td>
            <td><a href="#">查看</a></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
