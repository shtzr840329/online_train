<!-- 培训机构 -->
<div class="panel-body js-panel-toggle">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% flash.each do |key, value| %>
    <% if value.present? %>
        <p class="text-danger"><%= value%></p>
    <% end %>
  <% end %>
  <%= hidden_field_tag :role, params[:role]%>
  <div class="input-group input-group-lg mt-20">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-cog"></span></span>
    <%= select_tag "admin[email]", options_for_select([]), autofocus: true, prompt: "请选择机构",class: "form-control", id: "schoolSelect" %>
  </div>
  <div class="input-group input-group-lg mt-20">
    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
    <%= f.password_field :password, label: false, required: false, autofocus: true, placeholder: "请输入密码", "aria-describedby": "basic-addon1", class: "form-control" %>
  </div>
  <div class="input-group mt-20">
    <%= f.input :remember_me, as: :boolean, label: "记住密码" if devise_mapping.rememberable? %>
  </div>
  <div class="col-sm-12  mt-20">
    <%= f.button :submit, "登 录", data: {disable_with: '登录中...'}, class: "btn btn-lg btn-primary btn-block center-block", "aria-describedby": "sizing-addon1" %>
  </div>
<% end %>
</div>

<script type="text/javascript">
  $(function(){
    $.ajax({
      type: "get",
      url: "<%= schools_by_province_admin_panel_schools_path %>?province_id="  + $(this).val(),
      dataType: "json",
      success: function(school){
        var options = "<option>请选择机构</option>"
        for(var i=0; i< school.length; i++){
          options += "<option value='" + school[i][1] + "'>" + school[i][0] + "</option>"
        }
        $("#schoolSelect").html(options);
      }
    });
  });
</script>