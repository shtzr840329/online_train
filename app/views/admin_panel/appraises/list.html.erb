<div class="grades-main-content">
  <div class="panel panel-primary">
    <div class="panel-heading have-menu">
      <ul id="detailMenu" class="nav nav-pills nav-content-menu">
        <%= render "nav"%>
      </ul>
    </div>
    <div class="panel-body">
      <table class="table table-condensed table-bordered">
        <thead>
          <tr>
            <th class="text-center">学员</th>
            <th class="text-center">评价老师</th>
            <th class="text-center">培训班</th>
            <th class="text-center">评价内容</th>
            <th class="text-center">满意程度</th>
            <th class="text-center">创建&amp;修改时间</th>
            <th class="text-center">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @appraises.each do |appraise| %>
            <tr>
              <td class="text-center" valign="middle"><%= appraise.try(:user).try(:name) %></td>
              <td class="text-center"><%= appraise.try(:admin).try(:name) %></td>
              <td align="left"><%= appraise.try(:training_course).try(:name) %></td>
              <td align="left"><%= appraise.remark %></td>
              <td align="left"><%= appraise.degree %></td>
              <td class="text-center"><%= appraise.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td class="text-center"><a href="#">查看</a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
