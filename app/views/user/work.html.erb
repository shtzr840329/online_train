<div class="container-fluid">
  <div class="wrapper">
    <div class="row">
      <div class="personal_center right_message_tab col-md-3">
        <%= render "personal_nav"%>
      </div>
      <div class="courses col-md-9">
          <div class="personal_center_content right-nav-tab">
            <strong class="col-md-3 right_message_tab"><span>我的作业</span></strong><br/>
            <div class="panel-group my-work-content" id="accordion" role="tablist" aria-multiselectable="true">
              <% @training_courses.each_with_index do |training_course,index|%>
                <div class="panel panel-default">
                  <div class="panel-heading" role="tab" id="heading<%= index %>">
                    <h4 class="panel-title">
                      <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= index %>" aria-expanded="true" aria-controls="collapseOne">
                        <%= training_course.name %>
                      </a>
                    </h4>
                  </div>
                  <div id="collapse<%= index %>" class="panel-collapse collapse <%= 'in' if index == 0 %>" role="tabpanel" aria-labelledby="heading<%= index %>">
                    <div class="panel-body">
                      <table class="border-table">
                        <tr>
                          <th width="35%">作业</th>
                          <th width="15%">创建时间</th>
                          <th width="20%">老师评价</th>
                          <th>作业提交</th>
                        </tr>
                        <%  training_course.tasks.each do |task|%>
                        <% user_task = current_user.get_user_task_by_task task%>
                        <tr>
                          <td>
                            <%= link_to(task.title, user_task_path(task),format: :js, remote: true) %>
                          </td>
                          <td><%= task.created_at.strftime("%F")%></td>
                          <td><%= user_task.try(:appraise) %></td>
                          <td>
                            <% if user_task.present? %>
                            <%= link_to(user_task.try(:title), edit_user_task_path(user_task,task_id: task.id),format: :js, remote: true) %>
                              <% if user_task.try(:attachment).present? %>
                              <br>(作业附件)
                              <%= link_to(user_task.try(:attachment).try(:avatar_file_name), download_user_task_path(user_task)) %>
                              <% end %>
                            <% else %>
                              <%= link_to("提交", new_user_task_path(task_id: task.id), remote: true, format: :js) %>
                            <% end %>
                          </td>
                        </tr>
                        <% end %>
                      </table>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

<div id="addTaskModal">
  
</div>


