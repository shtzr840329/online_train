<div class="main-content wrapper">
  <div class="panel-list">
    <div class="panel-main">
      <div class="panel-bg gap-80">国培项目</div>
      <div class="panel-body bordered">
		  	<div class="panel panel-default half-width pull-left">
					<div class="panel-heading text-center oh">
				    <span class="active-title">培训通知</span>
				    <%= link_to "更多", "http://www.hvett.com.cn/index.php", target: "_blank", class: "pull-right active-link" %>
				  </div>
					<div class="panel-body">
					  <ul class="list">
					    <!-- 最多显示5行 -->
					    <% Spider::TONGZHI_ARRAY.each do |tongzhi|%>
						  	<li>
						  	  <a href="<%= tongzhi['link'] %>" target="_blank" class="col-sm-10 pull-left">&nbsp;&nbsp;<%= tongzhi['text'] %></a>
						  	  <span class="pull-right"><%= tongzhi['time'] %></span>
						  	</li>
						  <% end %>
					  </ul>
					</div>
				</div>
			  <div class="panel panel-default half-width pull-right">
				  <div class="panel-heading text-center oh">
				  	<span class="active-title">培训报名</span>
				    <%= link_to "更多", "http://www.hvett.com.cn/index.php", target: "_blank", class: "pull-right active-link" %>
				  </div>
				  <div class="panel-body">
				    <ul class="list">
					    <!-- 最多显示5行 -->
					    <% Spider::BAOMING_HASH.each do |text, link| %>
						  	<li>
						  	  <a href="<%= link %>" target="_blank" class="col-sm-12 pull-left"><%= text %></a>
						  	</li>
						  <% end %>
					  </ul>
				  </div>
				</div>
			</div>
		  </div>
		</div>
  </div>
</div>

