<div class="grades-main-content">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <ul class="nav nav-pills">
        <li role="presentation" class="">
          <%= link_to admin_panel_notification_training_course_path(@training_course.notification, @training_course), class: "btn btn-default" do %>
            <span class="">培训班信息</span>
          <% end %>
        </li>
        <li role="presentation">
        <%= link_to admin_panel_training_course_user_training_courses_path(@training_course), class: "btn btn-default" do %>
           <span class="">培训班报名列表</span>
        <% end %></li>
      </ul>
    </div>
    <div class="panel-body">
      <%= form_tag admin_panel_training_course_user_training_courses_path(@training_course), method: :get do %>
        <div class="col-sm-3">
          <div class="form-group">
           <%= text_field_tag :keyword, nil, class: "form-control", placeholder: '请输入关键字' %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <%= submit_tag "搜索", class: "btn primary" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="panel-body">
      <table class="table table-condensed">
        <thead>
          <tr>
            <th>姓名</th>
            <th>账号</th>
            <th>性别</th>
            <th>省份</th>
            <th>联系方式</th>
            <th>地址</th>
            <th>报名时间</th>
            <th>日志</th>
            <% if can? [:edit, :applied, :disapplied], UserTrainingCourse %>
              <th rowspan="2">操作</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'user_training_course', locals: {search: @search} %>
        </tbody>
      </table>
    </div>
  </div>
