<div class="container-fluid">
  <div class="wrapper">
    <div class="row">
      <div class="personal_center right_message_tab col-md-3">
        <%= render "personal_nav"%>
      </div>
      <div class="col-sm-9 courses">
        <div class="panel panel-default course-panel">
          <div class="panel-heading">
            <ul id="courseMenu" class="nav nav-pills">
              <li class="active"><a href="javascript:void(0);">我的课程</a></li>
              <li><a href="javascript:void(0);">已完成课程</a></li>
            </ul>
          </div>
          <div class="panel-body course-content">
            <%= render "my_course"%>
          </div>
          <div class="panel-body course-content" style="display: none;">
            <%= render "ending_course"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function(){
    $("#courseMenu li").click(function(){
      $(this).addClass("active").siblings().removeClass("active");
      $(".course-content").hide();
      $(".course-content").eq($(this).index()).show();
    });
  });
</script>