<%= form_for [:admin_panel, @training_course, @notification], html: { class: 'form-horizontal' }, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f|%>
  <div class="form-group">
    <%= f.label :category, '分类', class: 'col-sm-3 control-label' %>
    <div class="col-sm-4">
      <% Notification.notification_categories.keys.each do |notification_category| %>
        <%= f.radio_button :category, notification_category %>
        <%= f.label notification_category.to_sym %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, '标题', class: 'col-sm-3 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :title, placeholder: "请输入标题", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sub_title, '副标题', class: 'col-sm-3 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :sub_title, placeholder: "请输入副标题", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, '作者/出处', class: 'col-sm-3 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :author, placeholder: "请输入作者/出处", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :view_count, '浏览量', class: 'col-sm-3 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :view_count, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, '内容', class: 'col-sm-3 control-label' %>
    <div class="col-sm-4">
      <%= f.kindeditor :content, :width => 800, :height => 300, class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-6 col-sm-offset-3">
  	<%= f.submit '确认提交', class: "btn btn-primary pull-left" %>
  </div>
<% end %>