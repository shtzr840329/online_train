<div class="grades-main-content">
  <div class="panel panel-primary">
    <div class="panel-heading have-menu">
      提交作业列表
    </div>

    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>学员</th>
            <th>联系方式</th>
            <th>作业标题</th>
            <th>作业附件</th>
            <th>创建&amp;修正时间</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @user_tasks.each do |user_task| %>
            <tr>
              <td><%= user_task.try(:user).name %></td>
              <td><%= user_task.try(:user).try(:email) %><br><%= user_task.try(:user).try(:mobile) %></td>
              <td><%= user_task.try(:task).title %></td>
              <td><%= link_to(truncate(user_task.try(:attachment).try(:avatar_file_name), length: 18), download_user_task_path(user_task), title: user_task.try(:attachment).try(:avatar_file_name) ) %></a></td>
              <td><%= user_task.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= link_to "指定评阅老师", new_admin_panel_user_task_admin_user_task_path(user_task) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
