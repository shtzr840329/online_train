<script type="text/javascript">
  $(function(){
    $(".js-panel-toggle").hide();
    $(".js-panel-toggle").first().show();
    $(".login-content .fix-panel ul li").each(function(index){
      var _this = $(this);
      var _index = index;
      _this.find("a").click(function(){
        $(this).addClass("active").parent().siblings().find("a").removeClass("active");
        $(".js-panel-toggle").eq(_index).show().siblings(".js-panel-toggle").hide();
      })
    })
  });
</script>