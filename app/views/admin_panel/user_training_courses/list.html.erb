<div class="grades-main-content">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">搜索栏</h3>
    </div>
    <div class="panel-body">
      <%= form_tag list_admin_panel_user_training_courses_path, method: :get do %>
        <div class="col-sm-3">
          <div class="form-group">
           <%= text_field_tag :q, nil, class: "form-control", placeholder: '请输入关键字' %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <%= submit_tag "搜索", class: "btn primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">培训报名</h3>
    </div>
    <div class="panel-body">
      <table class="table table-condensed">
        <thead>
          <tr>
            <th class="text-center">姓名</th>
            <th class="text-center">账号</th>
            <th class="text-center">性别</th>
            <th class="text-center">职称</th>
            <th class="text-center">省份</th>
            <th class="text-center">联系方式</th>
            <th class="text-center">地址</th>
            <th class="text-center">状态</th>
            <th class="text-center">报名时间</th>
            <th colspan="2" class="text-center">操作</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'user_training_course', locals: {search: @search} %>
        </tbody>
      </table>
    </div>
  </div>
