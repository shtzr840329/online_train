<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr class="active text-center">
        <th colspan="4">培训班级信息</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">培训班级名称</th>
        <td colspan="3"><%= @training_course.name %></td>
      </tr>
      <tr>
        <th scope="row">培训机构</th>
        <td colspan="3">上海市高职高专教学研究会</td>
      </tr>
      <tr>
        <th scope="row">培训项目负责人</th>
        <td>华老师</td>
        <th>联系方式</th>
        <td>021-57132803<br>13801804822</td>
      </tr>
      <tr>
        <th scope="row">班级负责人</th>
        <td colspan="3">赵晨清 021-57132803 18217771365</td>
      </tr>
      <tr>
        <th scope="row">起止时间</th>
        <td>2015.07.18至2015.07.24</td>
        <th>计划人数</th>
        <td class="font-red"><%= @training_course.plan_number%></td>
      </tr>
      <tr>
        <th scope="row">培训天数</th>
        <td>6天</td>
        <th>剩余名额</th>
        <td class="font-green"><%= @training_course.plan_number.to_i - @training_course.user_training_courses.count%></td>
      </tr>
      <tr>
        <th scope="row">培训地点</th>
        <td colspan="3">上海电子信息职业技术学院</td>
      </tr>
    </tbody>
  </table>
</div>
<br>
<% if @present_user_training_course.present? %>
  <%= link_to "已报名", "javascript:void(0)", class: "apply-btn" %>
<% else %>
  <% if user_signed_in? %>
    <%= form_for UserTrainingCourse.new, remote: true do |f| %>
      <%= f.hidden_field :training_course_id, value: @training_course.id %>
      <%= f.hidden_field :user_id, value: @current_user.id %>
      <%= f.submit "我要报名", class: "apply-btn" %>
    <% end %>
  <% else %>
    <%= link_to "请先登录", new_user_session_path, class: "apply-btn" %>
  <% end %>
<% end %>
<br>